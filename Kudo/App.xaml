<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Kudo.Pages"
             x:Class="Kudo.App">

    <Application.MainPage>
        <Shell>
            <TabBar x:Name="PhoneTabs">
                <Tab Title="Analytics" Icon="Resources\Images\analytics_img.png">
                    <ShellContent ContentTemplate="{DataTemplate local:Analytics}"/>
                </Tab>
                <Tab Title="Categories" Icon="Resources\Images\categories_img.png">
                    <ShellContent ContentTemplate="{DataTemplate local:Сategories}"/>
                </Tab>
                <Tab Title="Calendar" Icon="Resources\Images\calendar_img.png">
                    <ShellContent ContentTemplate="{DataTemplate local:Calendar}"/>
                </Tab>
                <Tab Title="History" Icon="Resources\Images\history_img.png">
                    <ShellContent ContentTemplate="{DataTemplate local:History}"/>
                </Tab>
            </TabBar>
        </Shell>
    </Application.MainPage>
</Application>
